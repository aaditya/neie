<html>
    <head>
        <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css'>
        <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css'>        
        <link rel="stylesheet" href="library/css/employeeCVdisplay.css">
        
        <link rel="stylesheet" href="library/css/signUp.css">
        <!-- Scripts -->
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
        <script src = "https://ajax.googleapis.com/ajax/libs/angularjs/1.3.14/angular.min.js"></script>    
        <script src = "https://ajax.googleapis.com/ajax/libs/angularjs/1.4.8/angular-route.min.js"></script>
        
    </head>
    <body>
		<% for(i=0;i<data.length;i++) { %>
        <div class="container-fluid">
            <br>
            <div class="row Box container-fluid">
                <div class="row container-fluid">
                    <div class="col-md-2">
                        <img style="width:60%;height:15%;border:2px solid #088A68">
                    </div>
                    <div class="col-md-8 greenTitle">
                        <h1><%= data[i].empemail %></h1>
                    </div>
                    <div class="col-md-2">
                        <button type="button" class="btn btn-info btn-lg" onclick="$('#feedbackForm').show();" style="margin-top:12%;font-size:18px;">Feedback</button>                    
                    </div>
                    <br>
                    <br>
                    <br>
                    <br>
                    <br>
<!--          feedback form          -->
				<form method="post" action="/feedback">
					<div id="feedbackForm" style="display:none;">
						<div class="row container-fluid" style="border-bottom:2px solid #c0c0c0; border-top:2px solid #c0c0c0;">
							<h3>Choose a rating &nbsp;	
								<select name="rate">
									<option value="1">1</option>
									<option value="2">2</option>
									<option value="3">3</option>
									<option value="4">4</option>	
									<option value="5">5</option>
								</select>
							</h3>
						</div>
						<br>
						<div class="row container-fluid">
							<textarea name="feed" class="form-control" rows="5" style="resize:none"></textarea>
							<input type="hidden" name="empem" value="<%= data[i].empemail %>" />
						</div>
						<br>
						<div class="row">
							<center><button class="btn btn-success">Submit</button></center>
						</div>
                    </div>
				</form>
<!--      feedback form ends              -->
                    
                </div>
            </div>
        </div>
		<% } %>
    </body>
</html>