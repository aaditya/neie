<html>
    <head>
        <!-- Styles -->
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
        
        <link rel="stylesheet" href="library/css/employeeCVdisplay.css">
        <link rel="stylesheet" href="library/css/signUp.css">
        
        <script src="library/js/addWorkExpOption.js"></script>
        
        
        <!-- Scripts -->
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
        <script src = "https://ajax.googleapis.com/ajax/libs/angularjs/1.3.14/angular.min.js"></script>    
        <script src = "https://ajax.googleapis.com/ajax/libs/angularjs/1.4.8/angular-route.min.js"></script>
        
    </head>
    <body ng-app="">
        <div class="container-fluid">
            <br>
            <form class="form-group" method="post" action="/train-save">
                <div class="row">
                    <div class="col-md-6">
                        <label for="trtitle">Trainning Title</label><input id="trtitle" class="form-control" type="text" name="ans1">
                    </div>
                    <div class="col-md-6">
                        <label for="org">Organization</label><input id="org" class="form-control" type="text" name="ans2" >
                    </div>
                </div>
                <br>
                <div class="row">
                    <h3 class="container-fluid">Time Period</h3>
                    <div class="col-md-6">
                        <label for="start">Trainning Starts</label><input id="start" class="form-control" type="date" name="ans3">
                    </div>
                    <div class="col-md-6">
                        <label for="end">Trainning Ends</label><input id="end" class="form-control" type="date" name="ans4">
                    </div>
                </div>
                <br>
                <div class="row container-fluid">
                    <label for="desc">Trainning Description</label><textarea id="desc" class="form-control" rows="5" style="resize:none;" name="ans5"></textarea>
                </div>
                <br>
                <div class="row container-fluid">
                    <h3>Technical Description</h3>
                    <form method="post">                                                        
                        <div id="dynamicSkill">                              
                        </div>
                        <button type="button" class="btn" onClick="addSkill('dynamicSkill');"><i class="fa fa-plus" aria-hidden="true"></i> Add</button>
                    </form>
                </div>
                <br>
                <div class="row">
                    <h3>Trainning Cost</h3>
                    <div class="col-md-6">
                        <input id="paid" class="form-control" ng-model="paidTrainning"  type="radio" name="ans6"><label for="paid">Paid</label> 
                    </div>
                    <div class="col-md-6">
                        <input id="nonPaid" class="form-control" type="radio" name="ans6"><label for="nonPaid" >Non Paid</label>
                    </div>                    
                </div>
                <br>
                <div class="row container-fluid" ng-show="paidTrainning">
                    <label for="cost">Cost</label><input id="cost" class="form-control" type="text" name="ans7">
                </div>
                <br>
                <div class="alert alert-info text-center">
                Kindly check the information before <strong>Submitting</strong> it.
            </div>
            <br>
            <button type="submit" class="btn btn-success" style="margin-left:20%; width:60%">Submit</button>
            <br>
                <br>
            </form>            
        </div>
    </body>
</html>